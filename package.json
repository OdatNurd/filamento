{
  "name": "filamento",
  "version": "0.1.0",
  "description": "A filament tracking application",
  "type": "module",
  "author": {
    "name": "OdatNurd",
    "email": "odatnurd@gmail.com",
    "url": "https://odatnurd.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OdatNurd/filamento"
  },
  "scripts": {
    "tool:format:check": "prettier --check client",
    "tool:format:write": "prettier --write client",
    "tool:lint": "eslint .",
    "tool:lint:fix": "eslint . --fix",
    "tool:nanoid": "node scripts/generateNanoId.js",
    "client:run": "rollup -c rollup.client.js -w --environment BUILD_ENV:development",
    "client:build:dev": "rollup -c rollup.client.js --environment BUILD_ENV:development",
    "client:build:staging": "rollup -c rollup.client.js --environment BUILD_ENV:staging",
    "client:build:production": "rollup -c rollup.client.js --environment BUILD_ENV:production",
    "service:run": "wrangler dev --persist-to ~/.config/.wrangler/state/",
    "service:build:dev": "rollup -c rollup.service.js --environment BUILD_ENV:development",
    "service:build:staging": "rollup -c rollup.service.js --environment BUILD_ENV:staging",
    "service:build:production": "rollup -c rollup.service.js --environment BUILD_ENV:production",
    "service:deploy:staging": "wrangler deploy --env=stage",
    "service:deploy:production": "wrangler deploy --env=prod",
    "app:deploy:staging": "pnpm run client:build:staging && pnpm run service:deploy:staging",
    "app:deploy:production": "pnpm run client:build:production && pnpm run service:deploy:production",
    "db:setup:dev": "./scripts/loadSQL --database filamento --file db/migrations/01_structure.sql",
    "db:setup:staging": "./scripts/loadSQL --database filamento-stage --file db/migrations/01_structure.sql --remote",
    "db:setup:production": "./scripts/loadSQL --database filamento-prod --file db/migrations/01_structure.sql --remote",
    "db:seed:dev": "./scripts/loadSQL --database filamento --file db/migrations/02_bootstrap.sql",
    "db:seed:staging": "./scripts/loadSQL --database filamento-stage --file db/migrations/02_bootstrap.sql --remote",
    "db:seed:production": "./scripts/loadSQL --database filamento-prod --file db/migrations/02_bootstrap.sql --remote",
    "db:bootstrap:dev": "pnpm run db:setup:dev && pnpm run db:seed:dev",
    "db:bootstrap:staging": "pnpm run db:setup:staging && pnpm run db:seed:staging",
    "db:bootstrap:production": "pnpm run db:setup:production && pnpm run db:seed:production"
  },
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@clerk/clerk-react": "^5.32.3",
    "@clerk/themes": "^2.2.53",
    "@hello-pangea/dnd": "^18.0.1",
    "@ionic/react": "^8.6.2",
    "@ionic/react-router": "^8.6.2",
    "@tanstack/react-query": "^5.81.5",
    "history": "^4.10.1",
    "hono": "^4.7.0",
    "ionicons": "^8.0.9",
    "nanoid": "^5.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^5.3.4",
    "react-router-dom": "^5.3.4",
    "workbox-window": "^7.1.0",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@axel669/rollup-dollar-path": "^0.1.0",
    "@axel669/rollup-hono-files": "^0.1.2",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.31.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.3",
    "@rollup/plugin-html": "^2.0.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/react-router-dom": "^5.3.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fs-jetpack": "^5.1.0",
    "globals": "^16.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rollup": "^4.45.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-workbox": "^8.1.2",
    "wrangler": "3.105.0"
  }
}
